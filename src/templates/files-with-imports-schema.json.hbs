    "properties": {
        "$schema": {
            "type": "string",
            "const": "./files-with-imports-schema.json"
        },
        "imports": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "input": {
                        "type": "string"
                    },
                    "output": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    }
                },
                "required": [
                    "input",
                    "output",
                    "name"
                ],
                "additionalProperties": false
            }
        }
    },
    "required": [
        "imports"
    ],
    "additionalProperties": false
